package main;

import java.awt.GridBagLayout;
import java.awt.Color;
import javax.swing.*;

public class ConverterToolsGUI {
	public static void main(String[] args) {
		inicializar();

	}

	private static void inicializar() {
		// Creamos el marco
		JFrame converterTools = new JFrame("Conversion Tools - Challenge ONE");
		converterTools.setSize(600, 300);
		converterTools.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

		// Creamos el Panel superior (Entradas)
		JPanel inputPanel = new JPanel();
		inputPanel.setSize(600, 150);
		inputPanel.setBackground(Color.RED);
		inputPanel.setLayout(new GridBagLayout());
		
		JPanel interno = new JPanel();
		inputPanel.setSize(150, 150);
		inputPanel.setBackground(Color.CYAN);
		inputPanel.setLayout(new GridBagLayout());
		

		// Etiqueta de Importe
		JLabel j_importe = new JLabel();
		j_importe.setText("Importe:");
		// Conectamos los componentes con el JPanel
		inputPanel.add(j_importe);
		inputPanel.add(interno);

		//relacionamos el JPanel con el JFrame
		converterTools.add(inputPanel);
		// Hacemos visible el JFrame
		converterTools.setVisible(true);
	}

}
