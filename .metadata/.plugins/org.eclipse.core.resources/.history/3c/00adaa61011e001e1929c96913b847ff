package main;

import java.net.URL;
import java.io.IOException;
import java.io.InputStream;
import java.net.HttpURLConnection;
import java.net.MalformedURLException;
import com.google.gson.*;

public class AgenteMonetario {
	private static String urlInicial = "https://v6.exchangerate-api.com/v6/";
	private static String accessKey = "e014bec508acd3d81a90aeba/pair/";
	private static Divisa moneda;
	InputStream respuesta;
//System.out.println(url+accessKey+moneda.values()[i].toString());

	private URL obtenerURL(String codigoIn, String CodigoOut) throws MalformedURLException {
		String linkFinal = urlInicial + accessKey + codigoIn + "/" + CodigoOut;
		URL urlFinal = new URL(linkFinal);
		return urlFinal;
	}

	public void hacerSolicitud(String codigoIn, String codigoOut) throws IOException {
		URL address = obtenerURL(codigoIn, codigoOut);
		HttpURLConnection conexion = (HttpURLConnection) address.openConnection();
		conexion.setRequestMethod("GET");
		conexion.connect();
		respuesta = conexion.getInputStream();

	}

